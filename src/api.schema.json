{
  "openapi": "3.0.1",
  "info": {
    "version": "1.3.0",
    "title": "Open Food Facts",
    "description": "Open Food Facts API",
    "termsOfService": "http://api_url/terms/",
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "https://open-food-facts.herokuapp.com/",
      "description": "Production Server"
    },
    {
      "url": "http://localhost:3333/",
      "description": "Local server"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "description": "Get the products",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/page"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The products information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          },
          "400": {
            "description": "No Products!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "There are no products",
                  "status": "error"
                }
              }
            }
          }
        }
      }
    },
    "/products/{code}": {
      "get": {
        "description": "Get the products",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/code"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The products information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          },
          "400": {
            "description": "No Product!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Product does not exists",
                  "status": "error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "page": {
        "type": "string",
        "example": "1"
      },
      "code":{
        "type": "string",
        "example": "5f998bfa9769b4e0cfeac86d"
      },
      "codeResponse":{
        "type": "number",
        "example": 3661112502850
      },
      "barcode":{
        "type": "string",
        "example": "3661112502850(EAN / EAN-13)"
      },
      "status":{
        "type": "string",
        "example": "imported"
      },
      "imported_t":{
        "type": "string",
        "example": "2020-02-07T16:00:00Z"
      },
      "url":{
        "type": "string",
        "example": "https://world.openfoodfacts.org/product/3661112502850"
      },
      "product_name":{
        "type": "string",
        "example": "Jambon de Paris cuit à l'étouffée"
      },
      "quantity":{
        "type": "string",
        "example": "240 g"
      },
      "categories":{
        "type": "string",
        "example": "Meats, Prepared meats, Hams, White hams"
      },
      "packaging":{
        "type": "string",
        "example": "Film en plastique, Film en plastique"
      },
      "brands":{
        "type": "string",
        "example": "Tradilège, Marque Repère"
      },
      "image_url":{
        "type": "string",
        "example": "https://static.openfoodfacts.org/images/products/366/111/250/2850/front_fr.3.400.jpg"
      },
      "Product": {
        "type": "object",
        "properties": {
          "code": {
            "$ref": "#/components/schemas/codeResponse"
          },
          "barcode": {
            "$ref": "#/components/schemas/barcode"
          },
          "status": {
            "$ref": "#/components/schemas/status"
          },
          "imported_t": {
            "$ref": "#/components/schemas/imported_t"
          },
          "url": {
            "$ref": "#/components/schemas/url"
          },
          "product_name": {
            "$ref": "#/components/schemas/product_name"
          },
          "quantity": {
            "$ref": "#/components/schemas/quantity"
          },
          "categories": {
            "$ref": "#/components/schemas/categories"
          },
          "packaging": {
            "$ref": "#/components/schemas/packaging"
          },
          "brands": {
            "$ref": "#/components/schemas/brands"
          },
          "image_url": {
            "$ref": "#/components/schemas/image_url"
          }
        }
      },
      "Products": {
        "type":"array",
        "items": {
          "type":"object",
          "properties": {
            "code": {
              "$ref": "#/components/schemas/codeResponse"
            },
            "barcode": {
              "$ref": "#/components/schemas/barcode"
            },
            "status": {
              "$ref": "#/components/schemas/status"
            },
            "imported_t": {
              "$ref": "#/components/schemas/imported_t"
            },
            "url": {
              "$ref": "#/components/schemas/url"
            },
            "product_name": {
              "$ref": "#/components/schemas/product_name"
            },
            "quantity": {
              "$ref": "#/components/schemas/quantity"
            },
            "categories": {
              "$ref": "#/components/schemas/categories"
            },
            "packaging": {
              "$ref": "#/components/schemas/packaging"
            },
            "brands": {
              "$ref": "#/components/schemas/brands"
            },
            "image_url": {
              "$ref": "#/components/schemas/image_url"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
